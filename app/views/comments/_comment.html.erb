<div id="comment_<%=comment.id%>" >
    <p>
        <h4><%=comment.user.email%></h4> 
    </p>
    <p>
        <b>
            <%=comment.body%>
        </b> 
        <i>
            <small>
                <small>
                    <%=comment.created_at%>
                </small>
            </small>
        </i>
    </p>
    <%if user_signed_in?%>
        <%=link_to "Delete", comment_path(comment), method: :delete, :class =>"btn btn-outline-danger" if comment.user_id == current_user.id%>
    <%end%>
    <div class="ps-5">
            <%= render 'comments/form',  url: comment_comments_path(comment)%> 
            <%=render comment.comments %>
    </div>
</div>