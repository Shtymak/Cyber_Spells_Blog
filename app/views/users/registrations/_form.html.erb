
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="title-form">
    <%=f.label "Перональні дані"%>
    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
         </div>
         <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control card-size",placeholder:"Електронна пошта" %>
    </div>


    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
         </div>
         <%= f.text_field :nickname, autofocus: true, autocomplete: "email",class:"form-control card-size",placeholder:"Ваше ім'я" %>
    </div>

    <%=f.label "Фото"%>
    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-image"></i> </span>
         </div>
         <%= f.file_field :avatar, autofocus: true, autocomplete: "email",class:"form-control card-size" %>
    </div>
<%=f.label "Пароль"%>
    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-key"></i> </span>
         </div>
         <%= f.password_field :password, autocomplete: "new-password",class:"form-control card-size", placeholder: "Пароль (не менше #{@minimum_password_length} символів)" %>
    </div>

    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-shield"></i> </span>
         </div>
         <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control card-size", placeholder: "Підтвердження паролю" %>
    </div>


</div>
