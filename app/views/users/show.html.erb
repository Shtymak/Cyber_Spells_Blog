                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Likes</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <% likes = 0 %>
                      <% @user_posts.each do |post| %>
                      <% likes += post.likes.count %>
                      <%end%>
                      <%=likes%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Follows</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%=@user.followers.count%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Following</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%=@user.followees.count%>
                    </div>
                  </div>
                </div>
              </div>
