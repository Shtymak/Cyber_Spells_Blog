                      <% end%>
                      <%unless @user.id == current_user.id%>
                      <%=link_to "Написати повідомлення", conversations_path, class:"btn btn-outline-primary"%>
                      <%end%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
