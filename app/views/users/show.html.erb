
<div class="container">
    <div class="main-body">

          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <%=image_tag @user.logo, alt:"Admin", class:"rounded-circle", width:150%>
                    <div class="mt-3">
                      <h4><%=@user.nickname%></h4>
                      <% if @user.id != current_user.id%>
                      <% if current_user.followees.include?(@user) %>
                      <h5><%= button_to "Відписатись", unfollow_user_path, method: "POST", class:"btn btn-outline-danger" %></h5>
