<div class="container">


<div class="ui segment">
  <h3 class="">Скринька</h3>
  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
          <% if conversation.sender_id == current_user.id %>
            <% recipient = User.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = User.find(conversation.sender_id) %>
          <% end %>
          <div class="marg">

          <div class="card card-size">
            <div class="card-body">
              <a href="<%=conversation_messages_path(conversation)%>" class="btn btn-primary left">Написати</a>
              <p class="card-text"><%=image_tag recipient.logo, height:50, width: 50, :class=>"rounded-circle"%><i class="card-title right-text"><%=recipient.nickname%></i></p>
            </div>
          </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>
